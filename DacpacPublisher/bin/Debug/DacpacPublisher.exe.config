<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
	</startup>

	<appSettings>
		<!-- Form Selection Settings -->
		<!-- Set to true to use the new refactored form, false for original -->
		<add key="UseRefactoredForm" value="false" />

		<!-- Application Settings -->
		<add key="ApplicationTitle" value="IST DacPac Publisher" />
		<add key="ApplicationVersion" value="2.0.0" />
		<add key="EnableDebugLogging" value="true" />

		<!-- Default Connection Settings -->
		<add key="DefaultServerName" value="(local)" />
		<add key="DefaultConnectionTimeout" value="30" />
		<add key="DefaultCommandTimeout" value="300" />

		<!-- UI Settings -->
		<add key="EnableModernTheme" value="true" />
		<add key="ShowMigrationDialog" value="true" />
		<add key="AutoSwitchToLogTabOnDeploy" value="true" />

		<!-- Deployment Settings -->
		<add key="DefaultCreateBackup" value="true" />
		<add key="EnableAsyncDeployment" value="true" />
		<add key="MaxConcurrentDeployments" value="1" />

		<!-- Validation Settings -->
		<add key="EnableRealTimeValidation" value="true" />
		<add key="ValidateOnConfigurationChange" value="true" />

		<!-- Migration Settings -->
		<add key="ShowMigrationProgress" value="true" />
		<add key="EnableControllerValidation" value="true" />
		<add key="LogMigrationAnalytics" value="true" />
	</appSettings>

	<system.diagnostics>
		<trace autoflush="true">
			<listeners>
				<add name="fileListener"
                     type="System.Diagnostics.TextWriterTraceListener"
                     initializeData="DacpacPublisher.log" />
				<remove name="Default" />
			</listeners>
		</trace>
	</system.diagnostics>

	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<!-- Add any assembly redirects here -->
		</assemblyBinding>
	</runtime>
</configuration>